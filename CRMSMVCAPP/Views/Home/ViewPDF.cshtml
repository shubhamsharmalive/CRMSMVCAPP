
@{
    ViewBag.Title = "ViewPDF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavascriptRefrences{

    <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script>

        $(document).ready(function () {

            $('#divDisplayPDF').hide();
        });

        DisplayPDF = function () {

            $('#divDisplayPDF').show();

        }

    </script>
}




<h2 style="color:#89C53F;"> View PDF </h2>

<div>

    <div style="width:50%;">

        <button type="button" id="btnViewPDF" class="btn-primary" style="margin: 20px; width: 16%; height: 31px; background-color: #89C53F;" onclick="DisplayPDF()"> View PDF </button>

    </div>

    <div style="width:50%;">

        <h3 style="color:#89C53F;"> You can view PDF here. </h3>

        <div id="divDisplayPDF">

            @Html.Action("_PDFView", "Home", new { id = "12345" })

        </div>



    </div>


</div>

